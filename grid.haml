      %h2 grid.haml
      :escaped
        .ex1_row
      %br
      = precede '&nbsp;' * 2 do
        :escaped
          %h1 This is the row element
      %br
      = precede '&nbsp;' * 2 do
        :escaped
          .ex1_col
      %br
      = precede '&nbsp;' * 4 do
        :escaped
          %h2 This is the first column
      %br
      = precede '&nbsp;' * 2 do
        :escaped
          .ex1_col
      %br
      = precede '&nbsp;' * 4 do
        :escaped
          %h2 This is the second column
