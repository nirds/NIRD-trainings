      %br
      = precede '&nbsp;' * 2 do
        :escaped
          background-color: #a36629 //Med Brown
      %br
      = precede '&nbsp;' * 2 do
        :escaped
          &:nth-of-type(2n)
      %br
      = precede '&nbsp;' * 4 do
        :escaped
          background-color: #ebccad //Light Brown
